<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="830.0" style="-fx-background-color: #0D050E;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PROYECTO.LoginController">
   <children>
      <TextField fx:id="tfCorreo" alignment="CENTER" layoutX="302.0" layoutY="367.0" prefHeight="33.0" prefWidth="225.0" promptText="Correo/Usuario">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </TextField>
      <PasswordField fx:id="pfContraseña" alignment="CENTER" layoutX="302.0" layoutY="415.0" prefHeight="33.0" prefWidth="225.0" promptText="Contraseña">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnIniciarSesion" layoutX="359.0" layoutY="478.0" mnemonicParsing="false" onAction="#iniciarSesion" stylesheets="@estilos.css" text="INICIAR SESIÓN">
         <font>
            <Font size="13.0" />
         </font>
         <effect>
            <Glow />
         </effect>
      </Button>
      <Button fx:id="btCrearCuenta" layoutX="348.0" layoutY="572.0" mnemonicParsing="false" onAction="#mostrarRegister" styleClass="links" stylesheets="@estilos.css" text="Crear una cuenta" textFill="#ffb6b6" underline="true">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <ImageView fitHeight="236.0" fitWidth="225.0" layoutX="323.0" layoutY="107.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Logo.png" />
         </image>
      </ImageView>
      <Text fill="WHITE" layoutX="255.0" layoutY="551.0" strokeType="OUTSIDE" strokeWidth="0.0" text="¿No tienes una cuenta en GuayacoCar?">
         <font>
            <Font name="Century Gothic" size="16.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
